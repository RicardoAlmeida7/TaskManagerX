<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskManagerX.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskManagerX.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Tarefas" Icon="task.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainView}" Route="MainView">
            </ShellContent>
        </Tab>
        <Tab Title="Adicionar Tarefa" Icon="task_add.svg">
            <ShellContent ContentTemplate="{DataTemplate local:RegisterItemView}" Route="RegisterView">
            </ShellContent>
        </Tab>
    </TabBar>
</Shell>
